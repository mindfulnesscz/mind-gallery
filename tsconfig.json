{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/js",
    "noImplicitAny": true,
    "noEmit": false,
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
  },
  "exclude": [
    "./*.js",
    "./dist/**/*"
  ]
}